<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nusg.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/nusglogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- home page of application, contains 6 buttons and is the default page, currently set to top parent class -->
        <activity
            android:name="com.nusg.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.nusg.app.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Sub pages of app, these include contact us, pre Acceptance, essentials, social, students and planner -->
        <activity
            android:name="com.nusg.app.Planner"
            android:label="@string/app_name" 
            android:parentActivityName="com.example.myfirstapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.MainActivity" />
            <intent-filter>
                <action android:name="com.nusg.app.PLANNER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- /////////////////////////////////////////////////////////////////////////////////////// -->

        <activity
            android:name="com.nusg.app.PreAcceptance"
            android:label="@string/app_name" 
            android:parentActivityName="com.nusg.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nusg.app.MainActivity" />
            <intent-filter>
                <action android:name="com.nusg.app.PREACCEPTANCE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- /////////////////////////////////////////////////////////////////////////////////////// -->

        <activity
            android:name="com.nusg.app.Essentials"
            android:label="@string/app_name" 
            android:parentActivityName="com.example.myfirstapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.MainActivity" />
            <intent-filter>
                <action android:name="com.nusg.app.ESSENTIALS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- /////////////////////////////////////////////////////////////////////////////////////// -->

        <activity
            android:name="com.nusg.app.Social"
            android:label="@string/app_name" 
            android:parentActivityName="com.example.myfirstapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.MainActivity" />
            <intent-filter>
                <action android:name="com.nusg.app.SOCIAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- /////////////////////////////////////////////////////////////////////////////////////// -->

        <activity
            android:name="com.nusg.app.Student"
            android:label="@string/app_name" 
            android:parentActivityName="com.example.myfirstapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.MainActivity" />
            <intent-filter>
                <action android:name="com.nusg.app.STUDENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- /////////////////////////////////////////////////////////////////////////////////////// -->

        <activity
            android:name="com.nusg.app.Contacts"
            android:label="@string/app_name" 
            android:parentActivityName="com.example.myfirstapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.MainActivity" />
            <intent-filter>
                <action android:name="com.nusg.app.CONTACTS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- ////////////////////////////////////////////////////////////////////////////////////// -->


        <!-- Splash activity that pops up during app startup, displays an image for 3 seconds, and then proceeds to home page. -->
        <activity
            android:name="com.nusg.app.Launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.LAUNCHER" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>