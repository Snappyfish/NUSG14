<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/itemEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Event Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
		<!-- Text can be hardcoded as it will be replaced anyways -->
		
    <TextView
        android:id="@+id/itemEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/itemEventName"
        android:text="Event Time" />

    <TextView
        android:id="@+id/itemEventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemEventTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/itemEventName"
        android:gravity="right|bottom"
        android:paddingLeft="8dp"
        android:text="Event Description" />

</RelativeLayout>
